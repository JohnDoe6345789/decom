<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?attr/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_photo_title"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:textSize="@dimen/text_title"
            android:textColor="@color/black"
            android:ellipsize="middle"
            android:gravity="center"
            android:id="@+id/tv_photo_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/main_item_photo"
            android:singleLine="true"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/iv_photo_back"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_back_dark_selector"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/iv_photo_display"
            android:padding="10dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_display_type"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_photo_grid"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_photo_title">
        <TextView
            android:textSize="14sp"
            android:textColor="?android:attr/textColorPrimary"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="@string/photo_tip"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_photo_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_photo_album"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_photo_title">
        <ListView
            android:id="@+id/lv_photo_album"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@android:color/transparent"
            android:dividerHeight="5dp"/>
    </LinearLayout>
</RelativeLayout>

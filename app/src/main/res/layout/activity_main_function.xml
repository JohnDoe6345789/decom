<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_poweroff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="16dp"
        android:textColor="#ffffff"
        android:gravity="center_vertical"
        android:background="@drawable/bg_dialog_title"
        android:paddingLeft="11dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_30dp"
        android:text="Screen mirroring"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="7">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.2">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:src="@drawable/screen"/>
            <TextView
                android:textColor="#ffffff"
                android:gravity="center"
                android:id="@+id/tv_function_screen"
                android:background="@drawable/bg_mirror_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Phone to Projector"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.2">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:src="@drawable/mirror"/>
            <TextView
                android:textColor="#ffffff"
                android:gravity="center"
                android:id="@+id/tv_function_mirror"
                android:background="@drawable/bg_mirror_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Projector to Phone"/>
        </LinearLayout>
        <TextView
            android:textSize="@dimen/size_16dp"
            android:textColor="#d2fff9"
            android:gravity="bottom|center_horizontal"
            android:id="@+id/tv_function_cancel"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_10dp"
            android:text="Cancel"
            android:layout_weight="0.6"/>
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="153dp"
        android:indeterminateDrawable="@drawable/pb_connecting"
        android:minWidth="80dp"
        android:minHeight="80dp"/>
    <TextView
        android:textSize="18sp"
        android:textColor="@color/c_525960"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:text="@string/main_connecting"/>
    <TextView
        android:textSize="15sp"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:id="@+id/tv_main_connect_cancel"
        android:background="@drawable/ic_connect_control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="189dp"
        android:text="@string/main_connect_cancel"/>
</LinearLayout>

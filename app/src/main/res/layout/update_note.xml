<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_note_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_18dp"
            android:layout_marginTop="20dp"
            android:src="0x7f070224"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_24sp">
            <TextView
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#e5fffc"
                android:ellipsize="end"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Firmware Update Instructions"
                android:singleLine="true"/>
            <TextView
                android:textSize="18dp"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="On your computer, go to the website:"/>
            <TextView
                android:textSize="18dp"
                android:textColor="#4e8bff"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="https://www.kodakphotoplus.com/pages/luma-350-portable-smart-projector-support"/>
            <TextView
                android:textSize="18dp"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Please follow instructions under the section “Firmware Update.”"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

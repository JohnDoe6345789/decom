<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pin_pop_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/pin_pop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        app:cardCornerRadius="30dp">
        <RelativeLayout
            android:orientation="vertical"
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/account_tab"
                    android:background="@drawable/luma_createaccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:id="@+id/account_header"
                        android:layout_width="match_parent"
                        android:layout_height="187dp">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:src="0x7f0701e7"
                            android:layout_weight="1"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/size_60dp">
                                <TextView
                                    android:textSize="@dimen/size_20dp"
                                    android:textColor="@color/color_tv_red"
                                    android:gravity="center_horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="KODAK"/>
                                <TextView
                                    android:textSize="@dimen/size_20dp"
                                    android:textColor="@color/white"
                                    android:gravity="center_horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="4dp"
                                    android:text="LUMA"/>
                            </LinearLayout>
                            <TextView
                                android:textSize="@dimen/size_15dp"
                                android:textColor="@color/white"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/tv_version"
                                android:lineSpacingExtra="8dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/account_header">
                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@+id/ll_bind_in"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <TextView
                                android:textSize="@dimen/size_15dp"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:id="@+id/tv_bind_login"
                                android:layout_width="match_parent"
                                android:layout_height="31dp"
                                android:text="Log in"/>
                            <View
                                android:layout_gravity="center"
                                android:id="@+id/view_bind_login"
                                android:background="@color/color_view_white"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="7.84dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@+id/ll_bind_create"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <TextView
                                android:textSize="@dimen/size_15dp"
                                android:textColor="#a3a3a3"
                                android:gravity="center"
                                android:id="@+id/tv_bind_create"
                                android:layout_width="match_parent"
                                android:layout_height="31dp"
                                android:text="Create account"/>
                            <View
                                android:layout_gravity="center"
                                android:id="@+id/view_bind_create"
                                android:background="#ffffff"
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="7.84dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:id="@+id/account_luma"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/account_tab"
                    android:layout_centerHorizontal="true">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:id="@+id/account_email"
                        android:background="@drawable/luma_email"
                        android:layout_width="246.43dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="47.96dp">
                        <ImageView
                            android:layout_gravity="center"
                            android:background="@drawable/luma_emailbackground"
                            android:paddingLeft="9dp"
                            android:paddingTop="@dimen/size_10dp"
                            android:paddingRight="8dp"
                            android:paddingBottom="@dimen/size_10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:src="0x7f0700b2"/>
                        <EditText
                            android:textSize="14dp"
                            android:textColor="@color/white"
                            android:textColorHint="#a3a3a3"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/et_bind_email"
                            android:paddingLeft="@dimen/size_15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/et_hint_email"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/account_password"
                        android:background="@drawable/luma_email"
                        android:layout_width="246.43dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17.07dp">
                        <ImageView
                            android:layout_gravity="center"
                            android:background="@drawable/luma_emailbackground"
                            android:paddingLeft="9dp"
                            android:paddingTop="8dp"
                            android:paddingRight="8dp"
                            android:paddingBottom="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:src="0x7f070223"/>
                        <EditText
                            android:textSize="14dp"
                            android:textColor="@color/white"
                            android:textColorHint="#a3a3a3"
                            android:gravity="center_vertical"
                            android:id="@+id/et_bind_password"
                            android:paddingLeft="@dimen/size_15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/et_hint_password"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginTop="29.54dp">
                        <TextView
                            android:textSize="13dp"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_help"/>
                        <TextView
                            android:textSize="13dp"
                            android:textColor="@color/white"
                            android:id="@+id/tv_bind_web"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@string/tv_com"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/ll_bind_login"
                    android:background="@drawable/bg_login_selector"
                    android:layout_width="match_parent"
                    android:layout_height="86dp"
                    android:layout_alignParentBottom="true">
                    <TextView
                        android:textSize="@dimen/size_16sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/tv_bind_way"
                        android:layout_width="match_parent"
                        android:layout_height="31dp"
                        android:text="@string/tv_login"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>

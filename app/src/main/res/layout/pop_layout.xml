<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pop_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/pop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <RelativeLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/ll_pop_connectdevice"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="15dp"
                    android:textColor="#ffffff"
                    android:gravity="center_vertical"
                    android:background="@drawable/dialog_tittle_rectangle"
                    android:paddingLeft="11dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reminder!"/>
                <TextView
                    android:textSize="@dimen/size_18sp"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_30dp"
                    android:layout_marginBottom="@dimen/size_10dp"
                    android:text="@string/tv_connect_tips"/>
                <TextView
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/tv_connect_device"
                    android:background="0x7f0700a4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Connect now"/>
                <TextView
                    android:textSize="@dimen/size_16dp"
                    android:textColor="#d2fff9"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/tv_connect_later"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:text="Maybe later"
                    android:layout_weight="0.6"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/ll_pop_power"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="15dp"
                    android:textColor="#ffffff"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_dialog_title"
                    android:background="@drawable/dialog_tittle_rectangle"
                    android:paddingLeft="11dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LogOFF"/>
                <TextView
                    android:textSize="@dimen/size_18sp"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:id="@+id/tv_dialog_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_30dp"
                    android:layout_marginBottom="@dimen/size_10dp"
                    android:text="Are you OK?"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="25dp">
                    <TextView
                        android:textSize="@dimen/size_16dp"
                        android:textColor="#d2fff9"
                        android:gravity="center"
                        android:id="@+id/tv_power_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="61dp"
                        android:text="OK"
                        android:layout_weight="0.6"
                        android:layout_alignParentLeft="true"/>
                    <TextView
                        android:textSize="@dimen/size_16dp"
                        android:textColor="#ff0000"
                        android:gravity="center"
                        android:id="@+id/tv_power_ok"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="61dp"
                        android:text="NO"
                        android:layout_weight="0.6"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
